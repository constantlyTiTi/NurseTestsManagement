<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.PatientActivity">


    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="601dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <fragment
            android:id="@+id/patientListViewFragment"
            android:name="com.example.testmanagement.ui.fragments.PatientListOfNurseFragment"
            android:layout_width="match_parent"
            android:layout_height="483dp" />

        <Button
            android:id="@+id/addNewPatient_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="add new patient"
            android:textSize="24sp" />

        <fragment
            android:id="@+id/addNewPatientFragment"
            android:name="com.example.testmanagement.ui.fragments.AddPatientFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>